<%- include ../head.ejs %>
<div class="context">
    <h1 class="text-center">Welcome Register page</h1>
    <div class="container-form ">
        <form action="/register" method="POST">

             <span class="login100-form-logo">
		   	    <i class="zmdi zmdi-landscape"></i>
		    </span>
            <h2>Register</h2>

            <div id="begin-pro">
                <div class="form-group">
                    <label rel="username">Username</label>
                    <input type="text" name="username" id="username">
                </div>

                <div class="form-group">
                    <label rel="email">E-mail</label>
                    <input type="email" name="email" id="email">
                </div>

                <div class="form-group">
                    <label rel="password">Password</label>
                    <input type="password" name="password" id="password">
                </div>

                <div class="form-group">
                    <label rel="repeatPassword">Repeat Username</label>
                    <input type="password" name="repeatPassword" id="repeatPassword">
                </div>

            </div>


            <button type="submit" id="p_btn">Sign Up</button>
        </form>
        <a id="login_btn" href="/login">Sign Up</a>
    </div>
</div>
<%- include ../bodyAnimated.ejs %>
<script src="/js/RegisterValidation.js"></script>
<%- include ../footer.ejs %>